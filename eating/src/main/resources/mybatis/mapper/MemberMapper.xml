<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eat.dao.MemberDAO">

	<!--  -->
	<select id="selectMember" parameterType="String"
		resultType="MemberVO">
		select * from member where userName=#{userName} and phoneNumber=#{phoneNumber}
	</select>
	
	
	<!-- 회원가입 -->
	<insert id="insertMember" parameterType="com.eat.vo.MemberVO"
		useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into member(userId,userPw,userName,phoneNumber)
		values(#{userId},#{userPw},#{userName},#{phoneNumber})
	</insert>


	<!-- 회원탈퇴 -->
	<delete id="deleteMember" parameterType="com.eat.vo.MemberVO">
		DELETE FROM member WHERE userId=#{userId} and userPw=#{userPw}
	</delete>


	<!-- 로그인 -->
	<select id="logincheck" parameterType="String" resultType="int">
		SELECT count(*) FROM member
		WHERE userId = #{userId} and userPw = #{userPw}
	</select>


	<!--  -->
	<select id="selectOne" parameterType="Long">
		SELECT * FROM member WHERE id=#{id}
	</select>


	<!--  -->
	<select id="selectMemberId" parameterType="String" resultType="com.eat.vo.MemberVO">
		SELECT * FROM member WHERE userId = #{userId}
	</select>
	

	<!-- 관리자로그인 -->
	<select id="selectGrade" parameterType="String">
		SELECT * FROM member
		WHERE userId=#{userId} and userPw=#{userPw} and grade=#{grade}
	</select>


	<!-- 회원목록 다가져오기 -->
	<select id="selectAll" resultType="com.eat.vo.MemberVO">
		SELECT * FROM member
	</select>


	<!-- 아이디찾기 -->
	<select id="findId" parameterType="String" resultType="MemberVO">
		SELECT * FROM member WHERE userName = #{userName} and phoneNumber=#{phoneNumber}
	</select>


	<!-- 비밀번호찾기 -->
	<select id="findPw" parameterType="String" resultType="MemberVO">
		SELECT * FROM member WHERE userName=#{userName} and phoneNumber=#{phoneNumber} and #{userId}
	</select>


</mapper>