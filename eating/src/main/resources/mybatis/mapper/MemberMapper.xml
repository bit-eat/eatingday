<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eat.dao.MemberDAO">


	<select id="selectMember" parameterType="com.eat.vo.MemberVO">
	select * from member
	where userId=#{userId} and useName=#{userName} and phoneNumber=#{phoneNumber}
	
	</select>

	<insert id="insertMember" parameterType="com.eat.vo.MemberVO">
		insert into
		member(id,userId,userPw,userName,phoneNumber,grade)
		values(5,#{userId},#{userPw},#{userName},#{phoneNumber},#{grade})
	</insert>

	<update id="updateMember" parameterType="com.eat.vo.MemberVO">
		UPDATE member SET userPw
		= #{userPw}, userName=#{userName},
		phoneNumber=#{phoneNumber}
		WHERE userId
		=#{userId}
	</update>

	<delete id="deleteMember" parameterType="com.eat.vo.MemberVO">
		DELETE FROM member WHERE
		userId=#{userId} and userPw=#{userPw}
	</delete>
	
	<select id="logincheck" parameterType="com.eat.vo.MemberVO">   
		SELECT *
		FROM member
		WHERE userId=#{userId} and userPw=#{userPw} and userName=#{userName}
	
	
	</select>

	<select id="selectOne" parameterType="Long">
		SELECT * 
		FROM member 
		WHERE id = #{id}
	</select>

	<select id="selectMemberId" parameterType="Long">
		SELECT * FROM member
		WHERE id = #{id}
	</select>

	<select id="selectGrade" parameterType="String">
		SELECT * FROM member
		WHERE id = #{grade}
	</select>

	<select id="selectAll" resultType="MemberVO">
		SELECT * FROM member
	</select>



</mapper>