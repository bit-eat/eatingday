<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eat.dao.MemberDAO">


	<select id="selectMember" parameterType="String"
		resultType="MemberVO">
		select * from member
		where userName=#{userName} and
		phoneNumber=#{phoneNumber}

	</select>

	<insert id="insertMember" parameterType="com.eat.vo.MemberVO"
		useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into
		member(userId,userPw,userName,phoneNumber)
		values(#{userId},#{userPw},#{userName},#{phoneNumber})
	</insert>


	<delete id="deleteMember" parameterType="com.eat.vo.MemberVO">
		DELETE FROM member WHERE userId=#{userId} and userPw=#{userPw}
	</delete>

	<select id="logincheck" parameterType="com.eat.vo.MemberVO">
		SELECT *
		FROM member
		WHERE
		userId=#{userId} and userPw=#{userPw} and
		userName=#{userName}


	</select>

	<select id="selectOne" parameterType="Long">
		SELECT *
		FROM member
		WHERE id
		= #{id}
	</select>

	<select id="selectMemberId" parameterType="String"
		resultType="com.eat.vo.MemberVO">
		SELECT * FROM member
		WHERE userId = #{userId}
	</select>

	<select id="selectGrade" parameterType="String">
		SELECT * FROM member
		WHERE id = #{grade}
	</select>

	<select id="selectAll" resultType="com.eat.vo.MemberVO">
		SELECT * FROM member
	</select>

	<select id="findId" parameterType="String" resultType="MemberVO">
		SELECT *
		FROM member
		WHERE userName = #{userName} and phoneNumber =
		#{phoneNumber}
	</select>

	<select id="findPw" parameterType="String" resultType="MemberVO">
		SELECT *
		FROM member
		WHERE userName = #{userName} and phoneNumber =
		#{phoneNumber} and #{userId}
	</select>


</mapper>